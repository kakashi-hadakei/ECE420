<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ece420.lab6.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Processing"
        android:id="@+id/MainTitle"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:layout_marginStart="25dp"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Histogram Equalization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/SubTitle1"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        android:layout_below="@+id/MainTitle"
        android:layout_alignStart="@+id/MainTitle" />

    <Button
        android:text="HistEq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHE"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/SubTitle1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="2D Convolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SubTitle2"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/buttonHE"
        android:layout_alignStart="@+id/SubTitle1" />

    <Button
        android:text="Sharpen Filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:id="@+id/buttonGB"
        android:layout_below="@+id/SubTitle2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Edge Detection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonED"
        android:layout_below="@+id/buttonGB"
        android:layout_alignStart="@+id/buttonGB"
        android:layout_marginTop="56dp" />

</RelativeLayout>
